---
const { title, description } = Astro.props;
---

<section>
  <h2>{title}</h2>
  <p>{description}</p>
  <div class="flex flex-col md:flex-row columns-auto gap-4 mb-4">
    <slot name="upper-row" />
  </div>
  <div class="flex flex-col md:flex-row columns-auto gap-4">
    <slot name="lower-row" />
  </div>
</section>
